{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "PenguinMod Desktop",
    "version": "1.5.3",
    "identifier": "com.penguinmod.app",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "PenguinMod Desktop - Version 1.5.3",
                "label": "init",
                "width": 450,
                "height": 100,
                "browserExtensionsEnabled": false,
                "center": true,
                "devtools": true,
                "url": "init.html",
                "alwaysOnTop": true,
                "closable": false,
                "resizable": false,
                "decorations": false
            },
            {
                "title": "PenguinMod Desktop - Version 1.5.3",
                "label": "main",
                "width": 1440,
                "height": 810,
                "browserExtensionsEnabled": false,
                "center": true,
                "devtools": true,
                "url": "editor.html",
                "focus": true,
                "visible": false,
                "create": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png",
            "icons/icon.ico"
        ],
        "createUpdaterArtifacts": true
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEzMzU0QkE2Q0QyNUI3OTEKUldTUnR5WE5wa3MxRTR3c2FFS2krV3RkQzNGUDdON1V2T0pMRS9WdnBhamw3dU9COHBzUGNsRGwK",
            "endpoints": [
                "https://github.com/PenguinMod-Desktop/PenguinMod-Desktop/releases/latest/download/latest.json"
            ],
            "windows": {
                "installMode": "passive"
            }
        },
        "deep-link": {
            "desktop": {
                "schemes": [
                    "penguinmod"
                ]
            }
        }
    }
}